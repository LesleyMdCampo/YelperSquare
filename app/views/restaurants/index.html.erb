<h3 class="subtitle-index">Downtown Austin Restaurants</h3>

<table>
	<thead>
		<th></th>
		<th>Restaurant</th>
		<th>Cuisine</th>
		<th>Address</th>
		<th>Phone</th>
		<th>Hours</th>
		<th>Review</th>
		<th>View</th>
		<th>Edit</th>
		<th class="last-column">Remove</th>
	</thead>

	<tbody>
		<tr><% @restaurants.each do |restaurant| %>
			<td class="first-column"><img class="thumbnail" src="<%= restaurant.picture_url %>"></td>
			<td><%= restaurant.name %></td>
			<td><%= restaurant.cuisine %></td>
			<td><%= restaurant.address %></td>
			<td><%= restaurant.phone %></td>
			<td><%= restaurant.hours %></td>
			<td><%= restaurant.snippet %></td>
			<td><%= link_to 'View', restaurant %></td>
			<td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
			<td class="last-column"><%= link_to 'Remove', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>	
	</tbody>
</table>

<button class="new-button"><%= link_to 'Add New Restaurant', new_restaurant_path %></button>
	






